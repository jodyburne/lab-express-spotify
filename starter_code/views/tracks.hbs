<div class='tracks-main'>
<div class='albumInfo'>
<div>
<img class='albumArt' src='{{pic}}' alt=''>
</div>
<div class='albumText'>
<h3 class='heading'>{{album}}</h3>
{{#each artists}}
<p><b>{{this.name}}</b></p>
{{/each}}
<p>Released   {{year}} </p>
<p>{{label}}</p>
</div>
</div>



<div>
<table>
  <tr class="heading">
    <th><h1 >Title</h1></th>
    <th><h1 >Listen</h1></th> 
  </tr>

  {{#each tracks}}
  <tr>

    <td>{{this.name}}</td>
    <td><figure>
    <audio
        controls
        src="{{this.preview_url}}">
            Your browser does not support the
            <code>audio</code> element.
    </audio>
</figure>
</td> 
  </tr>
{{/each}}    
</table>
</div>
</div>



